<div class="row">
  <div class="col-lg-12">
    <div class="btn-group pull-right" dropdown>
      <h4>
        <button class="btn btn-ghost btn-panel btn-dark btn-lg dropdown-toggle" dropdown-toggle>
          <span class="glyphicon glyphicon-option-vertical"></span>
        </button>
      </h4>
      <ul class="dropdown-menu" role="menu">
        <li role="menuitem" ng-repeat="item in menuitems"><a href="">{{item.title}}</a></li>
      </ul>
    </div>
    <h2 ng-switch="title">
      <span ng-switch-when="Movies" class="glyphicon glyphicon-film"></span>
      <span ng-switch-when="Actors" class="glyphicon glyphicon-user"></span>
      <span ng-switch-when="Directors" class="glyphicon glyphicon-bullhorn"></span>
      <span ng-switch-default></span>
      {{title}}
    </h2>
  </div>
</div>