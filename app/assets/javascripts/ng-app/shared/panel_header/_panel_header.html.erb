<div class="row">
  <div class="col-lg-12">
    <div class="btn-group pull-right" dropdown keyboard-nav>
      <h4>
        <button class="btn btn-ghost btn-panel btn-dark btn-lg dropdown-toggle" ng-class="{disabled: menuItems.length <= 0}" dropdown-toggle>
          <span class="glyphicon glyphicon-option-vertical"></span>
        </button>
      </h4>
      <ul class="dropdown-menu" role="menu">
        <li role="menuitem" ng-repeat="item in menuItems" ng-click="onMenuItemClick($index)"><a>{{item.label}}</a></li>
      </ul>
    </div>
    <h2 ng-switch="title" class="text-capitalize">
      <span ng-switch-when="Movies" class="glyphicon glyphicon-film"></span>
      <span ng-switch-when="Actors" class="glyphicon glyphicon-user"></span>
      <span ng-switch-when="Directors" class="glyphicon glyphicon-bullhorn"></span>
      <span ng-switch-default></span>
      {{title}}
    </h2>
  </div>
</div>