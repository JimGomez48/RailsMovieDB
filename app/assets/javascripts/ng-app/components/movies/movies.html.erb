<li class="list-group-item text-center" ng-if="movies.length <= 0"><h4><em>No movies to display</em></h4></li>
<a href="" class="list-group-item" ng-repeat="movie in movies">
  <div class="row">
    <div class="col-lg-12">
      <div class="media-left">
        <%= image_tag 'default_movie.png', height: 128 %>
        <!--<img ng-src="{{movie.img_url}}" height="128"/>-->
      </div>
      <div class="media-body">
        <h3 class="media-heading text-primary text-capitalize">{{ movie.title }}</h3>
        <div><strong>Rating:</strong> {{ movie.mpaa_rating }}</div>
        <div><strong>Company:</strong>
          <span ng-repeat="company in movie.companies">{{$first? '' : ', '}}{{company.name}}</span>
        </div>
        <div><strong>Year:</strong> {{ movie.year }}</div>
      </div>
    </div>
  </div>
</a>