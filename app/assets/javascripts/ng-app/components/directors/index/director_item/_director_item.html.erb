<a href="" class="list-group-item">
  <div class="row">
    <div class="col-lg-12">
      <div class="media-left">
        <img ng-src="img/default_movie.png" height="128"/>
      </div>
      <div class="media-body">
        <h3 class="media-heading text-primary text-capitalize">{{ director.first }} {{ director.last }}</h3>

        <div><strong>Born:</strong> {{ director.dob | date }}</div>
        <div ng-if="director.dod"><strong>Died:</strong> {{ director.dod | date }}</div>
      </div>
    </div>
  </div>
</a>