<li class="list-group-item text-center" ng-if="directors.length <= 0"><h4><em>No directors to display</em></h4></li>
<a href="" class="list-group-item" ng-repeat="director in directors">
  <div class="row">
    <div class="col-lg-12">
      <div class="media-left">
        <%= image_tag 'default_person.png', height: 128 %>
        <!--<img ng-src="{{movie.img_url}}" height="128"/>-->
      </div>
      <div class="media-body">
        <h3 class="media-heading text-primary text-capitalize">{{ director.first }} {{ director.last }}</h3>
        <div><strong>Born:</strong> {{ director.dob | date }}</div>
        <div ng-if="director.dod"><strong>Died:</strong> {{ director.dod | date }}</div>
      </div>
    </div>
  </div>
</a>