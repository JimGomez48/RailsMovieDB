<div class="container">
  <h1>Movies</h1>

  <table class="table">
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Year</th>
      <th>Rating</th>
      <th>Company</th>
    </tr>

    <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= movie.title %></td>
          <td><%= movie.year %></td>
          <td><%= movie.rating %></td>
          <td><%= movie.company %></td>
        </tr>
    <% end %>
  </table>
</div>